PROMPT ### SETOR DO 31 AO 999999 ###
PROMPT

SELECT CCODIGO,CNOME,CCIDADE,PESEMANA,PETIPO FROM 
CLIENTES,PEDIDOS WHERE 
PECLIENTE=CCODIGO AND PESEMANA = '202247' AND CSETOR BETWEEN '100031' AND '100999';

PROMPT
PROMPT ### CLIENTES FORA DO CEARA ###
PROMPT

SELECT CCODIGO,CNOME,CCIDADE,CIDNOME,CIDESTADO,PESEMANA,PETIPO FROM 
CLIENTES,PEDIDOS,CIDADES WHERE 
PECLIENTE=CCODIGO AND CCIDADE = CIDCODIGO AND PESEMANA = '202247' AND CIDESTADO NOT IN ('CE');

SET LINESIZE 500
PROMPT
PROMPT ### VERIFICAR OS BAIRROS DA CAPITAL PARA IDENTIFICAR POSSIVEIS ERROS NA GRAFIA ###
PROMPT

SELECT CCODIGO,CCIDADE,CIDNOME,CBAIRRO,CSEMLANCAMENTO FROM 
CLIENTES,CIDADES WHERE 
CCIDADE = CIDCODIGO AND CSEMLANCAMENTO = 202247 AND CIDCODIGO = 1347 ORDER BY CBAIRRO;
